{
    "name": "prometheus",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/prometheus/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/prometheus",
                "tsConfig": "libs/prometheus/tsconfig.lib.json",
                "packageJson": "libs/prometheus/package.json",
                "main": "libs/prometheus/src/index.ts",
                "assets": [
                    "libs/prometheus/*.md"
                ]
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/prometheus/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "libs/prometheus/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": [
        "scope:core",
        "query:prometheus"
    ]
}
