{
    "extends": [
        "../../.eslintrc.js"
    ],
    "ignorePatterns": [
        "!**/*"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "parserOptions": {
                "project": [
                    "apps/polaris-cli/tsconfig.*?.json"
                ]
            },
            "rules": {}
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "arrow-body-style": "off",
                "@typescript-eslint/no-unsafe-member-access": "off",
                "@typescript-eslint/restrict-template-expressions": "off"
            }
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        }
    ]
}
