{
  "name": "polaris-sloc",
  "version": "0.6.0",
  "license": "Apache-2.0",
  "scripts": {
    "nx": "nx",
    "build": "nx build",
    "docker:build:polaris-ui": "npm run build -- polaris-ui && mv ./dist/apps/polaris-ui ./apps/polaris-ui/dist && docker build -t polarissloc/polaris-ui:$npm_package_version -t polarissloc/polaris-ui:latest ./apps/polaris-ui",
    "docker:push-latest:polaris-ui": "docker push polarissloc/polaris-ui:$npm_package_version && docker push polarissloc/polaris-ui:latest",
    "docker:build:elasticity-horizontal-elasticity-strategy-controller": "docker build -f ./apps/elasticity/horizontal-elasticity-strategy-controller/Dockerfile --build-arg POLARIS_APP_TYPE=elasticity --build-arg POLARIS_APP_NAME=horizontal-elasticity-strategy-controller -t polarissloc/horizontal-elasticity-strategy:latest .",
    "docker:build:elasticity-vertical-elasticity-strategy-controller": "docker build -f ./apps/elasticity/vertical-elasticity-strategy-controller/Dockerfile --build-arg POLARIS_APP_TYPE=elasticity --build-arg POLARIS_APP_NAME=vertical-elasticity-strategy-controller -t polarissloc/vertical-elasticity-strategy:latest .",
    "docker:build:slo-cost-efficiency-slo-controller": "docker build -f ./apps/slo/cost-efficiency-slo-controller/Dockerfile --build-arg POLARIS_APP_TYPE=slo --build-arg POLARIS_APP_NAME=cost-efficiency-slo-controller -t polarissloc/slo-cost-efficiency:latest .",
    "docker:build:slo-cpu-usage-slo": "docker build -f ./apps/slo/cpu-usage-slo-controller/Dockerfile --build-arg POLARIS_APP_TYPE=slo --build-arg POLARIS_APP_NAME=cpu-usage-slo-controller -t polarissloc/slo-cpu-usage:latest .",
    "docker:build:metrics-rest-api-cost-efficiency-controller": "docker build -f ./apps/metrics/rest-api-cost-efficiency-controller/Dockerfile --build-arg POLARIS_APP_TYPE=metrics --build-arg POLARIS_APP_NAME=rest-api-cost-efficiency-controller -t polarissloc/metrics-rest-api-cost-efficiency-controller:latest .",
    "docs:build": "npx typedoc --tsconfig ./tsconfig.typedoc.json",
    "gen-crds": "npx ts-node --project ./tools/scripts/tsconfig.json ./tools/scripts/gen-crds.ts",
    "serialize-slo-mappings": "npx ts-node --project ./tools/scripts/tsconfig.json ./tools/scripts/serialize-slo-mappings.ts",
    "ts-circular-dep-check": "npx madge --circular . > circular-dependencies-report.txt",
    "ts-circular-dep-check-svg": "npx madge --circular --image dependencies.svg .",
    "test": "nx test",
    "lint": "nx workspace-lint",
    "e2e": "nx e2e",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "workspace-generator": "nx workspace-generator"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "madge": {
    "tsConfig": "tsconfig.base.json",
    "fileExtensions": [
      "ts"
    ]
  },
  "private": true,
  "dependencies": {
    "@grafana/data": "^8.5.0",
    "@kubernetes/client-node": "^0.16.3",
    "@openapi-contrib/json-schema-to-openapi-schema": "2.1.1",
    "@stoplight/json-ref-resolver": "^3.1.3",
    "axios": "~1.3.6",
    "change-case": "^4.1.2",
    "class-transformer": "~0.5.1",
    "express": "^4.17.3",
    "grafana-dash-gen": "^3.2.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "prom-client": "^14.0.1",
    "prometheus-query": "^3.2.3",
    "reflect-metadata": "~0.1.13",
    "rxjs": "6.6.7",
    "safe-flat": "^2.0.2",
    "ts-json-schema-generator": "1.0.0",
    "tslib": "^2.4.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@nrwl/devkit": "15.9.2",
    "@nrwl/eslint-plugin-nx": "15.9.2",
    "@nrwl/jest": "15.9.2",
    "@nrwl/js": "15.9.2",
    "@nrwl/linter": "15.9.2",
    "@nrwl/node": "^15.9.2",
    "@nrwl/nx-plugin": "^15.9.2",
    "@nrwl/webpack": "15.9.2",
    "@nrwl/workspace": "15.9.2",
    "@swc-node/register": "^1.4.2",
    "@swc/cli": "~0.1.55",
    "@swc/core": "^1.2.173",
    "@swc/helpers": "~0.5.0",
    "@types/jest": "^29.4.0",
    "@types/json-schema": "^7.0.9",
    "@types/lodash": "^4.14.176",
    "@types/node": "~18.16.0",
    "@types/yargs": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "dotenv": "16.0.0",
    "eslint": "8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^43.0.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^4.3.0",
    "jest-environment-jsdom": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "jest": "^29.4.1",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^10.5.4",
    "madge": "^5.0.1",
    "nx": "15.9.2",
    "openapi-types": "^11.0.0",
    "prettier": "2.7.1",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^3.14.1",
    "typedoc": "~0.24.6",
    "typescript": "4.9.5"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9"
  }
}
